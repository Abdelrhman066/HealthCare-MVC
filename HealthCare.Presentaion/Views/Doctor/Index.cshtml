@model IEnumerable<HealthCare.Presentaion.ViewModels.DoctorToDisplayVM>

 @{
    ViewData["Title"] = "All Doctors";
} 

<h1>Index</h1>

<form asp-action="Index" method="get">
    <div class="form-group">
        <input type="text" style="width:300px;" name="searchString" value="@ViewData["CurrentFilter"]" class="form-control" placeholder="Search by Name" />
        <button type="submit" class="mt-3 btn btn-primary">Search</button>

    </div>

</form>

<p>
    <a asp-action="Create" class="mt-3 btn btn-success">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FullName)
            </th>
            
            <th>
                @Html.DisplayNameFor(model => model.Specialization)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ContactNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OfficeAddress)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FullName)
            </td>
            
            <td>
                @Html.DisplayFor(modelItem => item.Specialization)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ContactNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OfficeAddress)
            </td>
            <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary">Details</a>
                <form asp-action="Delete" asp-route-id="@item.Id" method="post" style="display:inline;">
                        <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this doctor?');">Delete</button>
                </form>
                <a asp-action="AddTimeSlot" asp-route-doctorId="@item.Id" class="btn btn-success">Add Time Slot</a>
            </td>
        </tr>
}
    </tbody>
</table>
