@model HealthCare.BusinessLogic.ViewModels.TimeSlotViewModel
@{
    ViewData["Title"] = "AddTimeSlot";
}

<h2>Add Available Time Slot</h2>

<form asp-action="SaveTimeSlot" method="post">
    <input type="hidden" asp-for="DoctorID" />

    <div class="form-group">
        <label asp-for="StartTime">Start Time</label>
        <input asp-for="StartTime" class="form-control" type="datetime-local" />
    </div>

    <div class="form-group">
        <label asp-for="IsAvailable">Is Available</label>
        <input asp-for="IsAvailable" class="form-control input2" type="checkbox" />
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
</form>

<style>
    .input2 {
        width: 3px;
        height: 25px;
    }
    </style>

